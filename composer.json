{
    "name": "tequilarapido/simple-widget",
    "description": "Simple widgets system for Laravel",
    "homepage": "https://github.com/tequilarapido/simple-widget",
    "license": "MIT",
    "authors": [
        {
            "name": "Nassif Bourguig",
            "email": "nbourguig@gmail.com",
            "homepage": "https://github.com/nbourguig",
            "role": "Developer"
        }
    ],
    "require": {
        "laravel/framework": "5.1.* || 5.2.* || 5.3.* || 5.4.*"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.5",
        "phpunit/phpunit": "4.*",
        "orchestra/testbench": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Tequilarapido\\SimpleWidget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tequilarapido\\SimpleWidget\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
